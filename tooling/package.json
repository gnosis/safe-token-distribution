{
  "name": "safe-distribution-token",
  "version": "1.0.0",
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "1.0.5",
    "@nomicfoundation/hardhat-network-helpers": "1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "3.1.3",
    "@typechain/ethers-v5": "11.0.0",
    "@typechain/hardhat": "8.0.0",
    "@types/chai": "4.3.4",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "10.0.0",
    "@types/node": "18.11.12",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "chai": "4.3.7",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "eslint": "8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "5.7.2",
    "hardhat": "2.16.1",
    "hardhat-gas-reporter": "^1.0.8",
    "lodash": "^4.17.21",
    "mocha": "10.2.0",
    "prettier": "2.8.1",
    "prettier-plugin-solidity": "1.1.0",
    "shx": "^0.3.4",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "0.8.2",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "4.9.4"
  },
  "dependencies": {
    "@gnosis.pm/safe-singleton-factory": "1.0.14",
    "@openzeppelin/contracts": "4.8.0",
    "@openzeppelin/merkle-tree": "^1.0.1",
    "@safe-global/api-kit": "1.1.0",
    "@safe-global/protocol-kit": "1.0.1",
    "@safe-global/safe-core-sdk-types": "2.0.0",
    "@safe-global/safe-ethers-lib": "1.9.3",
    "async-retry": "1.3.3",
    "date-fns": "^2.29.3",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "11.1.0",
    "graphql": "^16.6.0",
    "graphql-request": "6.1.0",
    "hardhat-deploy": "0.11.22"
  },
  "resolutions": {
    "solhint/@solidity-parser/parser": "^0.14.5"
  },
  "scripts": {
    "dev:bump-distro": "yarn hardhat run scripts/bump-goerli-distro.ts --network goerli",
    "deploy-distros": "yarn hardhat deploy --network mainnet && yarn hardhat deploy --network gnosis",
    "verify-distros": "yarn hardhat verify --network mainnet && yarn hardhat verify --network gnosis",
    "clean": "shx rm -rf ./artifacts ./cache ./build ./coverage ./typechain ./coverage.json",
    "compile": "yarn clean && hardhat compile --config hardhat.base.config.ts",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 1 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.js --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test --config hardhat.base.config.ts",
    "typechain": "hardhat typechain --config hardhat.base.config.ts",
    "audit": "hardhat audit",
    "allocate": "hardhat allocate --name initial-9m-distro --weights-mainnet './csv/Safe_token_distro_-_Ethereum.csv' --weights-gnosis './csv/Safe_token_distro_-_Gnosis.csv' 9000000",
    "checkpoint": "hardhat checkpoint",
    "distribute": "hardhat distribute"
  }
}
